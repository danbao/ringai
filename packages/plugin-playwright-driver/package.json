{
  "name": "@testring/plugin-playwright-driver",
  "version": "0.8.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./src/index.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ringcentral/testring.git"
  },
  "author": "RingCentral",
  "license": "MIT",
  "scripts": {
    "test": "mocha",
    "test:debug": "PLAYWRIGHT_DEBUG=1 mocha --config .mocharc.debug.json",
    "postinstall": "node scripts/install-browsers.cjs",
    "install-browsers": "node scripts/install-browsers.cjs",
    "uninstall-browsers": "npx playwright uninstall --all",
    "build": "tsup --config ../../tsup.config.base.ts --format esm && tsc -p tsconfig.build.json --declaration --emitDeclarationOnly"
  },
  "dependencies": {
    "@testring/logger": "workspace:*",
    "@testring/plugin-api": "workspace:*",
    "@testring/timeout-config": "workspace:*",
    "@testring/types": "workspace:*",
    "@types/node": "22.8.5",
    "playwright": "^1.48.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^10.0.15",
    "chai": "^4.3.7",
    "sinon": "^15.2.0",
    "ts-node": "10.9.2"
  }
}
